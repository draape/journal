{
  "compilerOptions": {
    "outDir": "public",
    "module": "esnext",
    "target": "es5",
    "lib": ["es2020", "DOM"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "declaration": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
  }
}
